<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/textImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_background"
        android:backgroundTint="#8BC34A"
        android:gravity="center"
        android:text="N"
        android:textColor="#FFFF00"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textSender"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:fontFamily="monospace"
        android:lines="1"
        android:text="12/02/2222"
        android:textSize="10sp" />

    <ImageButton
        android:id="@+id/imageStar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textContent"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:src="@drawable/ic_empty_star_24" />
    <TextView
        android:id="@+id/textSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/textDate"
        android:layout_toEndOf="@id/textImage"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:lines="1"
        android:text="Gmail hello world from begginer"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textImage"
        android:layout_toStartOf="@id/imageStar"
        android:layout_below="@id/textSender"
        android:fontFamily="sans-serif-medium"
        android:text="Hello world long long title"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textImage"
        android:layout_toStartOf="@id/imageStar"
        android:layout_below="@id/textTitle"
        android:fontFamily="sans-serif-light"
        android:text="The first program of almost programmer"
        android:textSize="12sp"
        android:lines="1"
        android:ellipsize="end"
        />

</RelativeLayout>